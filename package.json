{
  "name": "eternl-dapp-browser",
  "version": "1.0.0",
  "description": "Deployment to serve dapp browser images.",
  "author": "Tastenkunst GmbH (info@tastenkunst.io)",
  "scripts": {
    "build": "npm run build:server",
    "build:server": "ts-node --project ./tsconfig.server.prod.json ./build-server.ts",
    "dev:server": "nodemon",
    "start:server": "node --expose-gc -r module-alias/register ./dist/server.js --env=production",
    "local:server": "node --expose-gc -r module-alias/register ./dist/server.js --env=development",
    "local:publish": "npm run build && npm run local:server"
  },
  "nodemonConfig": {
    "watch": [
      "src/server"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "ts-node --project ./tsconfig.server.json -r tsconfig-paths/register ./src/server"
  },
  "_moduleAliases": {
    "src": "dist",
    "@daos": "dist/daos",
    "@shared": "dist/shared",
    "@server": "dist/Server"
  },
  "dependencies": {
    "@opentelemetry/api": "1.4.0",
    "@opentelemetry/auto-instrumentations-node": "0.36.1",
    "@opentelemetry/exporter-trace-otlp-http": "0.35.1",
    "@opentelemetry/sdk-node": "0.35.1",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "express": "4.18.2",
    "helmet": "6.0.1",
    "module-alias": "2.2.2",
    "path": "0.12.7",
    "tsconfig-paths": "4.1.2",
    "winston": "3.8.2"
  },
  "devDependencies": {
    "@types/compression": "1.7.2",
    "@types/cors": "2.8.13",
    "@types/fs-extra": "11.0.1",
    "@types/helmet": "4.0.0",
    "@types/node": "18.11.18",
    "fs-extra": "11.1.0",
    "nodemon": "2.0.20",
    "ts-node": "10.9.1",
    "typescript": "4.9.4"
  },
  "engines": {
    "node": ">=18.0.0 <19.0.0",
    "npm": "^9.1",
    "yarn": "^1.22.19"
  }
}
